<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna dasar merah lembut -->
    <solid android:color="#E63946" />

    <!-- Sudut melengkung -->
    <corners android:radius="20dp" />

    <!-- Sedikit padding biar isi nggak nempel ke tepi -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />

    <!-- Garis tepi agak terang -->
    <stroke
        android:width="2dp"
        android:color="#F87171" />
</shape>