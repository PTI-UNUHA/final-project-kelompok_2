<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:ignore="MissingClass">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#29B6F6"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_mudah"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="#FFFFFF"
            android:gravity="center"
            android:padding="0dp"
            android:layout_marginLeft="250dp"
            android:paddingLeft="-90dp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Timer, Progress -->
    <LinearLayout
        android:id="@+id/topProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_timer" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:45"
            android:textColor="#2A3AA8"
            android:textSize="14sp"
            android:layout_marginLeft="6dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="100"
            android:progress="30"
            android:layout_marginLeft="16dp"
            style="@android:style/Widget.ProgressBar.Horizontal" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/10"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <!-- Main Scroll Area -->
    <ScrollView
        android:layout_below="@id/topProgress"
        android:layout_above="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!-- Teks Soal -->
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seorang petani memiliki 5 keranjang apel. Setiap keranjang berisi 30 apel. Ia ingin menghitung total apel menggunakan perulangan for di Python. Kode manakah yang benar?"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp" />

            <!-- Jawaban A -->
            <TextView
                android:id="@+id/optA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A   for i in range 5;"
                android:padding="14dp"
                android:textSize="16sp"
                android:background="@drawable/opt_true"
                android:textColor="#000"
                android:layout_marginTop="12dp" />

            <!-- Jawaban B -->
            <TextView
                android:id="@+id/optB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B   for i in range 30;"
                android:padding="14dp"
                android:textSize="16sp"
                android:background="@drawable/opt_normal"
                android:textColor="#000"
                android:layout_marginTop="8dp" />

            <!-- Jawaban C -->
            <TextView
                android:id="@+id/optC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C   total_apel ++ 5"
                android:padding="14dp"
                android:textSize="16sp"
                android:background="@drawable/apt_false"
                android:textColor="#000"
                android:layout_marginTop="8dp" />

            <!-- Jawaban D -->
            <TextView
                android:id="@+id/optD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D   total_apel = 5 * 30"
                android:padding="14dp"
                android:textSize="16sp"
                android:background="@drawable/opt_normal"
                android:textColor="#000"
                android:layout_marginTop="8dp" />

            <!-- Feedback Salah -->
            <TextView
                android:id="@+id/tvWrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jawaban Anda Salah!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#D32F2F"
                android:padding="12dp"
                android:layout_marginTop="14dp" />

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jawaban yang benar di tandai warna hijau."
                android:textColor="#000"
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginTop="4dp" />

            <!-- Gambar dan Motivasi -->
            <ImageView
                android:id="@+id/imgMascot"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/maskot"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvSpirit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tetap Semangat!"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sebelumnya"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#D32F2F" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Berikutnya"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#29B6F6" />

    </LinearLayout>

</RelativeLayout>