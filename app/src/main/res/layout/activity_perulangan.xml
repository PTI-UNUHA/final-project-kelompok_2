<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#001240"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/titleTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Materi Perulangan Python"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="0dp"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="#FFFFFF" />
    </LinearLayout>


    <!-- MAIN CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- JUDUL 1 -->
            <TextView
                android:text="1. Konsep Dasar For Loop"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- PARAGRAF -->
            <TextView
                android:text="Konsep Dasar For Loop amerulangan beruangansemen, tuila berangan dengan perulangan for Loop sasar cara menyenangkan."
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />


            <!-- CARD CONTOH CODE -->
             <androidx.cardview.widget.CardView
                android:id="@+id/codeCard"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"/>

            <!-- CARD CONTOH FOR LOOP -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/code_border"
                    android:padding="40dp">

                    <!-- GARIS HITAM -->
                    <View
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#000000" />

                    <!-- ISI CODE -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="12dp">

                        <TextView
                            android:text="# Contoh For Loop"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="fruits = ['apple', 'banana', 'cherry']\n\nfor x in fruits:\n    print(x)"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:typeface="monospace"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!-- JUDUL 2 -->
            <TextView
                android:text="2. For Loop dengan Range()"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- PARAGRAF -->
            <TextView
                android:text="Temisirai kungan imemagar trute belnsan dengan to Loop dengan tuiha dan."
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />


            <!-- TOMBOL BAWAH -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="32dp"
                android:layout_marginLeft="300dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_arrow_down"
                    android:background="@drawable/round_yellow"
                    android:padding="16dp"
                    app:tint="#FFFFFF" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>