<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- HEADER TETAP DI ATAS -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#062552"
        android:padding="14dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tingkat Skor"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="#FFFFFF"
            android:gravity="center"
            android:padding="0dp"
            android:layout_marginLeft="350dp"
            android:paddingLeft="-90dp" />
    </RelativeLayout>

    <!-- KONTEN UTAMA DI TENGAH LAYAR -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="40dp"
            android:paddingBottom="40dp">

            <!-- FOX + TEXT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/imgFox"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/maskot" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="-10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#1A2B49" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pencapaianmu!"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#1A2B49" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih level skor yang ingin kamu lihat:"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- BUTTON AREA -->
            <Button
                android:id="@+id/btnMudah"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#29B6F6"
                android:text="SKOR MUDAH"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="60dp" />

            <Button
                android:id="@+id/btnSedang"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#F2C21D"
                android:text="SKOR SEDANG"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnSulit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#E53935"
                android:text="SKOR SULIT"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />

            <!-- FOOTER TEXT -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih level untuk melihat riwayat nilai Anda."
                android:gravity="center"
                android:textColor="#666"
                android:padding="20dp"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>