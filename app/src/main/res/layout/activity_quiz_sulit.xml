<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- HEADER MERAH -->
    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E53935"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Sulit"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="#FFFFFF"
            android:gravity="center"
            android:padding="0dp"
            android:layout_marginLeft="270dp"
            android:paddingLeft="-90dp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- TIMER + PROGRESS -->
    <LinearLayout
        android:id="@+id/topProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_below="@id/toolbar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_timer" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:00"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="6dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/5"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    
    <!-- BOTTOM NAV - MOVED TO BOTTOM -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sebelumnya"
            android:textSize="16sp"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BERIKUTNYA"
            android:textSize="16sp"
            android:backgroundTint="#29B6F6"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- CUSTOM KEYBOARD - NOW ABOVE BOTTOM NAV -->
    <LinearLayout
        android:id="@+id/customKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#000000"
        android:layout_above="@id/bottomNav">

        <!-- Baris 0: Angka 1-0 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="8" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="9" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="0" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Baris 1: QWERTYUIOP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="Q" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="W" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="E" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="R" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="T" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="Y" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="U" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="I" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="O" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="P" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Baris 2: ASDFGHJKL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="A" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="S" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="D" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="F" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="G" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="H" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="J" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="K" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="L" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Baris 3: CAPS + ZXCVBNM + Hapus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btnCaps"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="CAPS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="12sp"
                android:textColor="#FFFFFF"/>
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="Z" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="X" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="C" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="V" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="B" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="N" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="M" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button
                android:id="@+id/btnDelete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="HAPUS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="12sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        
        <!-- Baris 4: Simbol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="." android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="," android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="_" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="(" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text=")" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="=" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="+" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="-" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text=":" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
            <Button style="@style/Widget.AppCompat.Button.Borderless" android:text="'" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- SCROLL CONTENT - NOW ABOVE KEYBOARD -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_below="@id/topProgress"
        android:layout_above="@+id/customKeyboard">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TEKS SOAL QUIZ SULIT -->
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Analysis dan lengkapi kode Python berikut yang mengimplementasikan nested loops..."
                android:textSize="16sp"
                android:textColor="#333"
                android:lineSpacingExtra="3dp" />

            <!-- KODE BOX -->
            <TextView
                android:id="@+id/codeBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E6E6E6"
                android:padding="14dp"
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                android:textColor="#333"
                android:fontFamily="monospace"
                android:text="import itertools
list_data = [1,3,3,4]
for combo in itertools.product(list_data, repeat=3):
    if _____:
        print(combo)" />

            <!-- MASKOT + BUBBLE -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imgMascot"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/maskot" />

                <TextView
                    android:id="@+id/tvSpirit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fokus dan Berpikir Kritis!"
                    android:background="#FFD65B"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginLeft="-10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
