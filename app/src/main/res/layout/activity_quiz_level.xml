<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#062552"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih Tingkat Kesulitan Quiz"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:padding="0dp"
                android:drawableTop="@drawable/ic_home"
                android:drawableTint="#FFFFFF" />
        </LinearLayout>

        <!-- GAMBAR -->
        <ImageView
            android:src="@drawable/maskot"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp" />


        <!-- TITLE -->
        <TextView
            android:text="Ayo Uji Pemahamanmu!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- SUBTITLE -->
        <TextView
            android:text="Pilih tingkat kesulitan quiz:"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <!-- QUIZ MUDAH -->
        <Button
            android:id="@+id/btnQuizMudah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Quiz Mudah"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_easy"
            android:paddingVertical="10dp" />

        <!-- QUIZ SEDANG -->
        <Button
            android:id="@+id/btnQuizSedang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quiz Sedang"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_medium"
            android:paddingVertical="14dp" />

        <!-- QUIZ SULIT -->
        <Button
            android:id="@+id/btnQuizSulit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quiz Sulit"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_hard"
            android:paddingVertical="14dp" />

    </LinearLayout>

</ScrollView>